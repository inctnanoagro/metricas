{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/inctnanoagro/metricas/schema/producoes.schema.json",
  "title": "Registro de Produção Acadêmica – INCT NanoAgro",
  "description": "Schema para registro padronizado de produções acadêmicas associáveis ao INCT NanoAgro, com base em dados declarados a partir do Currículo Lattes, para fins de prestação de contas, análise institucional e relatórios de impacto.",
  "type": "object",
  "required": [
    "identificacao",
    "autores",
    "tipo_producao",
    "dados_bibliograficos",
    "vinculo_institucional",
    "metadados_coleta"
  ],
  "properties": {
    "identificacao": {
      "type": "object",
      "required": ["titulo", "ano"],
      "properties": {
        "titulo": {
          "type": "string",
          "minLength": 3
        },
        "ano": {
          "type": "integer",
          "minimum": 2024,
          "maximum": 2025
        },
        "idioma": {
          "type": "string",
          "enum": ["pt", "en", "es", "outro"]
        }
      }
    },

    "autores": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["nome_completo"],
        "properties": {
          "nome_completo": {
            "type": "string"
          },
          "pesquisador_inct": {
            "type": "boolean",
            "description": "Indica se o autor é pesquisador vinculado ao INCT NanoAgro."
          },
          "instituicao": {
            "type": "string"
          }
        }
      }
    },

    "tipo_producao": {
      "type": "string",
      "enum": [
        "artigo_periodico",
        "capitulo_livro",
        "livro",
        "trabalho_evento",
        "resumo",
        "patente",
        "produto_tecnologico",
        "outro"
      ]
    },

    "dados_bibliograficos": {
      "type": "object",
      "properties": {
        "revista_ou_evento": {
          "type": "string"
        },
        "issn_isbn": {
          "type": "string"
        },
        "doi": {
          "type": "string"
        },
        "editora": {
          "type": "string"
        }
      }
    },

    "vinculo_institucional": {
      "type": "object",
      "required": ["associavel_inct"],
      "properties": {
        "associavel_inct": {
          "type": "boolean",
          "description": "Indica se a produção pode ser associada ao INCT NanoAgro para fins institucionais."
        },
        "observacao_vinculo": {
          "type": "string",
          "description": "Justificativa ou observação sobre o vínculo institucional."
        }
      }
    },

    "indicadores_basicos": {
      "type": "object",
      "properties": {
        "qualis": {
          "type": "string"
        },
        "fator_impacto": {
          "type": "number",
          "minimum": 0
        }
      }
    },

    "metadados_coleta": {
      "type": "object",
      "required": ["fonte", "data_registro"],
      "properties": {
        "fonte": {
          "type": "string",
          "enum": ["curriculo_lattes"]
        },
        "data_registro": {
          "type": "string",
          "format": "date"
        },
        "responsavel_registro": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false
}
